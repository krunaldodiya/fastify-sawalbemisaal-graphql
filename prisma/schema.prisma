datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  country_id String
  mobile     String   @unique
  name       String?
  username   String?  @unique
  email      String?  @unique
  password   String?
  country    Country  @relation(fields: [country_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("users")
}

model Language {
  id         String   @id @default(uuid())
  name       String
  nickname   String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("languages")
}

model Country {
  id         String   @id @default(uuid())
  name       String
  shortname  String
  phonecode  String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  User User[]
  @@map("countries")
}
